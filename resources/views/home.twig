{% extends "layout" %}

{% block extraHead %}
    <script type="application/ld+json">
{
   "@context": "http://schema.org",
   "@type": "WebSite",
   "url": "{{ url('/') }}",
   "potentialAction": {
     "@type": "SearchAction",
     "target": "{{ url('/kereses/search?textToSearch={search_term_string}')}}",
     "query-input": "required name=search_term_string"
   }
}
</script>
{% endblock %}

{% block pageHeader %}
    <div class="page-header">
        <h1>Szentírás.eu <span class="hidden-xs hidden-sm sitesubtitle">Digitális Biblia 2012 óta. (Régi <b>szentiras.hu</b>)</span></h1>
    </div>
{%  endblock %}

{% block content %}

    {% include 'quickChapterSelector' %}

    <div class="card mt-1">
        <div class="card-header">Katolikus fordítások</div>        
        <div class="card-body">
        {% for row in cathBibles %}
            <h4 class="card-title"> <a href='/{{ row.abbrev }}'>{{ row.name }}</a></h4>
        {% endfor %}
        </div>
    </div>

    <div class="card mt-1">
        <div class="card-header">További fordítások</div>        
        <div class="card-body">
            {% for row in otherBibles %}
                <h4 class="card-title"><a href='/{{ row.abbrev }}'>{{ row.name }}</a></h4>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block abbrevlist %}
    {% include 'bookAbbrevList' %}
{% endblock %}

{% set js = ['pages/home'] %}