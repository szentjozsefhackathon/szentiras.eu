
<div class="card" id="accordion">
    <div class="card-header d-none d-md-block">
        Keresés a Bibliában
    </div>
    <div class="card-body">
        <form id="quickSearchForm" role="form" method="post" class="form-inline"
                action="/kereses/quicksearch" id="quickSearchForm">
            <div class="form-group">
                <div class="input-group">
                    <input id="quickSearch" autocomplete="off" type="text" class="form-control" name="textToSearch" value="{{ form.textToSearch }}" placeholder="Gyorskeresés">
                    <input id="grouping" type="hidden" class="form-control" name="grouping" value="verse">
                    {{ csrf_field() }}
                    <div class="input-group-append">
                        <a href="javascript:void(0)" class="quickSearchButton btn btn-default btn-primary"><span id="quickSearchHitsButtonContent"><i class="bi-search"></i></span></a>
                    </div>
                    <div class="input-group-append">
                        <a href="javascript:void(0)" title="Részletes keresés" class="quickSearchButton btn-secondary d-md-none d-lg-none btn btn-default"><i class="bi-gear"></i></a></span>
                    </div>
                    <div class="input-group-append">
                        <a href="/ai-search" title="MI keresés" class="btn-secondary d-md-none d-lg-none btn btn-default"><i class="bi-robot"></i></a></span>                            
                    </div>

                </div>
            </div>
        </form>
        <div class="d-none d-md-block text-center mt-2">
            <a href="javascript:void(0)" role="button" class="quickSearchButton btn btn-secondary btn-default"><i class="bi-gear"></i> Részletes keresés</a>
        </div>
        <div class="d-none d-md-block text-center mt-2">
            <a href="/ai-search" role="button" class="btn btn-secondary btn-default"><i class="bi-robot"></i> MI keresés</a>
        </div>
    </div>
</div>
